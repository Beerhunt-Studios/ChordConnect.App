@page "/notifications"
@inject NavigationManager NavManager

<style>
    .notifications-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        padding: 20px;
        background-color: #2A2A2A;
        color: #FFE9D6;
        height: 100vh;
    }

    .notifications-header {
        font-size: 2rem;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .notification-item {
        background-color: #1E1E1E;
        border-radius: 8px;
        padding: 15px;
        margin: 10px 0;
        width: 100%;
        max-width: 600px;
        display: flex;
        flex-direction: column;
        gap: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
    }

    .notification-item p {
        font-size: 1rem;
        margin: 0;
    }

    .notification-item .timestamp {
        font-size: 0.9rem;
        color: #B1B1B1;
        text-align: right;
    }

    .action-buttons {
        display: flex;
        gap: 20px;
        margin-top: 20px;
    }

    .action-buttons button {
        background-color: #D8A7B1;
        color: #1E1E1E;
        border-radius: 12px;
        padding: 12px 20px;
        border: none;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .action-buttons button:hover {
        background-color: #F8C1D4;
    }

    .action-buttons button:focus {
        outline: none;
    }
</style>

<div class="notifications-container">
    <div class="notifications-header">Deine Benachrichtigungen</div>

    @foreach (var notification in notifications)
    {
            <div class="notification-item">
                <p>@notification.Message</p>
                <div class="timestamp">@notification.Timestamp.ToString("dd.MM.yyyy HH:mm")</div>
            </div>
    }

    <div class="action-buttons">
        <button @onclick="ClearNotifications">Alle Benachrichtigungen löschen</button>
    </div>
</div>

@code {
    private List<Notification> notifications = new List<Notification>
    {
        new Notification
        {
            Message = "Du hast eine neue Nachricht von Max.",
            Timestamp = DateTime.Now.AddMinutes(-5)
        },
        new Notification
        {
            Message = "Dein Profil wurde von einem anderen Künstler gemocht!",
            Timestamp = DateTime.Now.AddHours(-1)
        },
        new Notification
        {
            Message = "Es gibt ein Update für ChordConnect.",
            Timestamp = DateTime.Now.AddDays(-1)
        }
    };

    private void ClearNotifications()
    {
        notifications.Clear();
    }

    public class Notification
    {
        public string Message { get; set; }
        public DateTime Timestamp { get; set; }
    }
}
