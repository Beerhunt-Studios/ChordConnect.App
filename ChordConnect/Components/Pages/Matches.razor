@page "/matches"
@inject NavigationManager NavManager

<style>
    .matches-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px;
        background-color: #2A2A2A;
        color: #FFE9D6;
        height: 100vh;
    }

    .matches-list {
        width: 100%;
        max-width: 800px;
        margin-top: 20px;
    }

    .match-card {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: #D8A7B1;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .match-card img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 50%;
        margin-right: 15px;
    }

    .match-card h3 {
        font-size: 1.5rem;
    }

    .match-card p {
        font-size: 1rem;
        color: #F8C1D4;
    }

    .no-matches {
        font-size: 1.2rem;
        margin-top: 30px;
        color: #FFE9D6;
    }
</style>

<div class="matches-container">
    <h1>Deine Matches</h1>

    @if (matches.Count > 0)
    {
            <div class="matches-list">
            @foreach (var match in matches)
            {
                        <div class="match-card">
                            <img src="@match.Image" alt="Profile Image" />
                            <div>
                                <h3>@match.Name</h3>
                                <p>@match.Description</p>
                            </div>
                            <button class="view-profile-btn" @onclick="() => ViewProfile(match)">Profil ansehen</button>
                        </div>
            }
            </div>
    }
    else
    {
            <div class="no-matches">
                Du hast noch keine Matches.
            </div>
    }
</div>

@code {
    private List<Match> matches = new List<Match>
    {
        new Match { Name = "Alice", Image = "https://placekitten.com/100/100", Description = "Musikproduzentin, liebt Indie und Chillwave" },
        new Match { Name = "Bob", Image = "https://placekitten.com/100/101", Description = "Singer-Songwriter, liebt lofi und Jazz" },
        new Match { Name = "Charlie", Image = "https://placekitten.com/100/102", Description = "DJ und Producer, spezialisiert auf elektronische Musik" }
    };

    private void ViewProfile(Match match)
    {
        // Beispiel: Navigiere zum Profil des Benutzers
        NavManager.NavigateTo($"/profile/{match.Name}");
    }

    private class Match
    {
        public string Name { get; set; }
        public string Image { get; set; }
        public string Description { get; set; }
    }
}
