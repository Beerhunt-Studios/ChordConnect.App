@using ChordConnect.Components.Login
@inherits LayoutComponentBase

<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<AuthorizeView>
    <NotAuthorized>
        <LoginScreen />
    </NotAuthorized>
    <Authorizing>
        <MudProgressCircular Color="Color.Primary" Size="@Size.Large" Indeterminate="true"/>
    </Authorizing>
    <Authorized>
        <MudLayout>
            <MudMainContent>
                @Body
            </MudMainContent>
            <MudAppBar Bottom="true" Dense="true" >
                <NavMenu />
            </MudAppBar>
        </MudLayout>
    </Authorized>
</AuthorizeView>

@code {
    MudTheme MyCustomTheme = new MudTheme()
        {
            PaletteLight = new PaletteLight()
            {
                Background = Colors.Amber.Lighten4,
            },
            PaletteDark = new PaletteDark()
            {
                Background = Colors.Amber.Lighten4
            },

            LayoutProperties = new LayoutProperties()
            {
                DrawerWidthLeft = "260px",
                DrawerWidthRight = "300px"
            }
        };
}